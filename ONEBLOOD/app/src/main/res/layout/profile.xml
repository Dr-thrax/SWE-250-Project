        android:layout_height="50dp"
        android:text="Name"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:shadowRadius="3"
        android:shadowColor="@color/c3"
        />
    <TextView
        android:textIsSelectable="true"
