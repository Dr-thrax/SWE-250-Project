        android:shadowColor="@color/c3"
        />

    <TextView
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:id="@+id/pf2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Name"
