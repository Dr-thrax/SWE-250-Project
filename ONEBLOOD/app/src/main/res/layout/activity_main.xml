<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fece2f"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageviewsplash2"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="nothign"

        android:src="@drawable/lg2" />

    <TextView
        android:id="@+id/sloganID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fontlogo"
        android:shadowColor="#111111"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Give Blood Give Life"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="@font/bangers" />

</LinearLayout>